<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD4B5"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="32dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55sp"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:text="Courtly" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/courtAlphaImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleAlphaCourtClick"
                android:layout_weight="1"
                app:srcCompat="@drawable/court" />

            <ImageView
                android:id="@+id/courtBravoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleBravoCourtClick"
                android:layout_weight="1"
                app:srcCompat="@drawable/court" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courtAlphaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:onClick="handleAlphaCourtClick"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Court Alpha" />

            <TextView
                android:id="@+id/courtBravoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:onClick="handleBravoCourtClick"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Court Bravo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/courtCharlieImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleCharlieCourtClick"
                android:layout_weight="1"
                app:srcCompat="@drawable/court" />

            <ImageView
                android:id="@+id/courtDeltaImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleDeltaCourtClick"
                android:layout_weight="1"
                app:srcCompat="@drawable/court" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courtCharlieText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:onClick="handleCharlieCourtClick"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Court Charlie" />

            <TextView
                android:id="@+id/courtDeltaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:onClick="handleDeltaCourtClick"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Court Delta" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/courtEchoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="handleEchoCourtClick"
                app:srcCompat="@drawable/court" />

            <ImageView
                android:id="@+id/courtFoxtrotImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="handleFoxtrotCourtClick"
                app:srcCompat="@drawable/court" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courtEchoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:onClick="handleEchoCourtClick"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Court Echo" />

            <TextView
                android:id="@+id/courtFoxtrotText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:onClick="handleFoxtrotCourtClick"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Court Foxtrot" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/courtGolfImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="handleGolfCourtClick"
                app:srcCompat="@drawable/court" />

            <ImageView
                android:id="@+id/courtHotelImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="handleHotelCourtClick"
                app:srcCompat="@drawable/court" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courtGolfText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textSize="15sp"
                android:onClick="handleGolfCourtClick"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Court Golf" />

            <TextView
                android:id="@+id/courtHotelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textSize="15sp"
                android:onClick="handleHotelCourtClick"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Court Hotel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/membershipBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#982B1C"
                android:text="Membership"
                android:textSize="18dp" />
            <Button
                android:id="@+id/reservationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#800000"
                android:text="Reservations"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>